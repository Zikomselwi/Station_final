@using Station.ViewModel

@model ReadingViewModel

@{
    ViewBag.Title = "Create";
}
<h3>تعديل القراءات</h3>
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="breadcrumbs-top">
                    <div class="breadcrumb-wrapper d-none d-sm-block">
                        <ol class="breadcrumb p-0 mb-0 pl-1">
                            <li class="breadcrumb-item">
                                <a href="index.html"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-action="Index">القراءات</a>
                            </li>
                            <li class="breadcrumb-item active">
                                صفحة التعديل
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">تعديل القراءات </h3>
            </div>
            <div class="card-body mt-2">
                <form asp-action="Create" method="post" class="wizard-horizontal wizard clearfix" role="application" id="steps-uid-0">
                    <fieldset id="steps-uid-0-p-0" role="tabpanel" aria-labelledby="steps-uid-0-h-0" class="body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="PointId">النقطة</label>
                                    <select asp-for="PointId" class="form-control" asp-items="Model.Items">
                                        <option value="">Select</option>
                                    </select>
                                    <span asp-validation-for="PointId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="MeterId">العداد</label>
                                    <select asp-for="MeterId" class="form-control" asp-items="Model.Meters">
                                        <option value="">Select</option>
                                    </select>
                                    <span asp-validation-for="MeterId" class="text-danger"></span>
                                </div>
                            </div>

                         

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="CurrentRead" class="control-label">القراءة</label>
                                    <input asp-for="CurrentRead" class="form-control" id="lastName12" placeholder="ادخل القراءة">
                                    <span asp-validation-for="CurrentRead" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Created">تاريخ الاضافة</label>
                                    <input asp-for="Created" class="form-control" id="emailAddress1" placeholder="ادخل تاريخ الاضافة">
                                    <span asp-validation-for="Created" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary glow mr-1 mb-1" style="width:150px">حفظ</button>
                                    &nbsp;
                                    <a asp-action="Index" asp-controller="Reading" class="btn btn-light glow mr-1 mb-1" style="width:150px">رجوع</a>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
           
    <script>
        $(document).ready(function() {
            $('#PointId').change(function() {
                var pointId = $(this).val();
                if (pointId) {
                    $.ajax({
                        url: '@Url.Action("GetMeters", "Reading")',
                        data: { pointId: pointId },
                        success: function(data) {
                            var meterDropdown = $('#MeterId');
                            meterDropdown.empty();
                            meterDropdown.append($('<option></option>').val('').text('Select a Meter'));
                            $.each(data, function(index, item) {
                                meterDropdown.append($('<option></option>').val(item.value).text(item.text));
                            });
                        }
                    });
                } else {
                    $('#MeterId').empty();
                    $('#MeterId').append($('<option></option>').val('').text('Select a Meter'));
                }
            });
        });
    </script>
}
