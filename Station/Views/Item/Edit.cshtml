@using Station.Models
@model Item

@{
    Layout = "_Layout";
}

<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="breadcrumbs-top">
                    <div class="breadcrumb-wrapper d-none d-sm-block">
                        <ol class="breadcrumb p-0 mb-0 pl-1">
                            <li class="breadcrumb-item">
                                <a href="index.html"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-action="Index">الفروع</a>
                            </li>
                            <li class="breadcrumb-item active">
                                تعديل النقطة
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">تعديل نقطة</h3>
            </div>
            <div class="card-body mt-2">
                <form asp-action="Edit" asp-controller="Item" class="wizard-horizontal wizard clearfix" role="application">
                    <input type="hidden" asp-for="Id" />
                    <fieldset role="tabpanel" aria-labelledby="steps-uid-0-h-0" class="body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="PointId">الفرع</label>
                                    <select asp-for="PointId" class="form-control" asp-items=" ViewBag.Pointslist">
                                        <option value="">اختر</option>
                                        <!-- Add options dynamically based on ViewBag or Model data -->
                                    </select>
                                    <span asp-validation-for="PointId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Name">الجوال</label>
                                    <input asp-for="Name" class="form-control" placeholder="ادخل اسم الفرع">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Number_phone">الاسم</label>
                                    <input asp-for="Number_phone" class="form-control" placeholder="ادخل اسم الفرع">
                                    <span asp-validation-for="Number_phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="Date">تاريخ الاضافة</label>
                                    <input asp-for="Date" class="form-control" placeholder="ادخل تاريخ الاضافة">
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary glow mr-1 mb-1" style="width:150px">حفظ</button>
                                <a asp-action="Index" asp-controller="Item" class="btn btn-light glow mr-1 mb-1" style="width:150px">رجوع</a>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
