@model Station.Models.Subscriber

@{
    ViewData["Title"] = "Details";
}

<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="breadcrumbs-top">
                    <div class="breadcrumb-wrapper d-none d-sm-block">
                        <ol class="breadcrumb p-0 mb-0 pl-1">
                            <li class="breadcrumb-item">
                                <a asp-action="Index" asp-controller="Home"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active">
                                Details
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
                    <div class="row pt-4">
                       <div class="col-12">
                            <h2 class="text-primary">تفاصــيل المشترك</h2>
                        </div>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-2">رقم المشترك</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.SubscriberNumber)</dd>
                        
                        <dt class="col-sm-2">الاسـم</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>
                        
                        <dt class="col-sm-2">رقم الهاتف</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>
                        
                        <dt class="col-sm-2">العنوان</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>
                        
                        <dt class="col-sm-2">تاريخ التسجيل</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Created)</dd>
                        
                        <dt class="col-sm-2">اسم النقطة</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Item.Name)</dd>
                        
                        <dt class="col-sm-2">رقم الهاتف</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Meter.Id)</dd>
                    </dl>
                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
                </div>
                </div>
       